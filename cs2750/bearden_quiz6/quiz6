function_1 () {
   echo 'This message is from function 1'
}
function_2 () {
   echo 'This message is from function 2'
}
function_3 () {
   echo 'This message is from function 3'
}

echo 'Enter a number from 1 to 3'
read number
if [ $number -eq 1 ]
then
  function_1
elif [ $number -eq 2 ]
then
  function_2
elif [ $number -eq 3 ]
then
  function_3
else
  echo 'Invalid entry, please try again.'
fi
